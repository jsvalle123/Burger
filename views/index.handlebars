<div class="container fluid">
      <h1 class="header-text p-2 mt-2">Eat-Da-Burger!</h1>
    <div class="col" class="header-text p-1">Burgers:</div>
      <ul class="list-group">
        {{#each undevoured}}
        <li class="list-group-item align-content-center">
          <p class="font-weight-bold p-1 text-block">{{burger_name}} </p>
          <button class="btn btn-warning devour-it" data-id="{{id}}">Devour It!</button>
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="md-col-5 align-md-left p-1">
      <h2 class="header-text p-1">BURGERS DEVOURED</h2>

      <ul class="list-unstyled">
        {{#each devoured}}
        <li class="list-group-item align-content-center">
          <p class="font-weight-bold p-1 text-block">{{burger_name}}</p>
          <button class="btn btn-warning delete-it" data-id="{{id}}">Clean Up</button>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <p></p>
  <div class="row d-flex justify-content-center">
    <div class="form-group form-frame p-2">
      <h2 class="header-text p-1">Add-Ya-Burger!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="new-name">Type of Burger:</label>
          <input type="text" id="newName" name="newName">
        </div>
        <button class="btn btn-info" type="submit">Add Burger</button>
      </form>
    </div>
